<Window x:Class="WpfTechPharma.Janelas.JanCadastrarProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTechPharma.Janelas"
        mc:Ignorable="d"
        Title="Cadastrar Produtos" 
        WindowStartupLocation="CenterScreen"
        Height="450" Width="1200" 
        MinWidth="1000" MinHeight="440"
        FontFamily="Arial"
        FontSize="16">
    <!--Tela Vinicius-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" VerticalAlignment="Center">
            <Label Content="NOME:" Height="30" FontFamily="Arial" HorizontalAlignment="Right" Margin ="5,5,5,5" FontSize="16" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left"  TextWrapping="Wrap" Text=""  Width="400" Height="25" Margin ="70,5,5,5"  FontFamily="Arial" FontSize="16" VerticalContentAlignment="Bottom"/>
            <Label Content="CÓDIGO DE BARRAS:" FontFamily="Arial" HorizontalAlignment="Right" Margin ="50,5,5,5" FontSize="16" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Right"  TextWrapping="Wrap" Text=""  Width="306" Height="25" Margin ="5,5,5,5"  FontFamily="Arial" FontSize="16" VerticalContentAlignment="Bottom"/>
        </WrapPanel>

        <WrapPanel Grid.Row="1" VerticalAlignment="Center">
            <Label Content="FORNECEDOR:" HorizontalAlignment="Right" Height="30"  FontFamily="Arial" Margin ="5,5,5,5" FontSize="16" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left"  TextWrapping="Wrap" Text=""  Width="306" Height="25" Margin ="5,5,5,5" FontFamily="Arial" FontSize="16" VerticalContentAlignment="Bottom"/>
            <Label Content="DATA DE VALIDADE:" HorizontalAlignment="Right"  Height="30" FontFamily="Arial" Margin ="150,5,5,5" FontSize="16" FontWeight="Bold"/>
            <DatePicker HorizontalAlignment="Left" Width="306" Height="25" Margin ="10,5,5,5" FontSize="16" FontFamily="Arial" VerticalContentAlignment="Bottom"></DatePicker>
        </WrapPanel>

        <WrapPanel Grid.Row="2" VerticalAlignment="Center">
            <Label Content="TIPO:" HorizontalAlignment="Right"   Height="30"  FontFamily="Arial" Margin ="5,5,5,5" FontSize="16" FontWeight="Bold" />
            <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="306" Height="25" Margin ="80,5,5,5" FontFamily="Arial" FontSize="16" VerticalContentAlignment="Bottom"/>
            <Label Content="PESO/VOLUME:" HorizontalAlignment="Right"   Height="30" FontFamily="Arial" Margin ="15,5,5,5" FontSize="16" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="306" Height="25" Margin ="130,5,5,5" FontFamily="Arial" FontSize="16" VerticalContentAlignment="Bottom"/>
        </WrapPanel>

        <WrapPanel  Grid.Row="3" Width="900" VerticalAlignment="Center">
            <Button Content="SALVAR" HorizontalAlignment="Center" FontFamily="Arial" Height="30" Width="120" Margin ="220,10,0,10" FontSize="16" FontWeight="Bold" Foreground="Black" Background="#fff0f0" BorderBrush="#bd0f0f" BorderThickness="2"/>
            <Button Content="CANCELAR" HorizontalAlignment="Center" FontFamily="Arial" Height="30"  Width="120" Margin ="220,10,0,10" FontSize="16" FontWeight="Bold" Foreground="Black" Background="#fff0f0" BorderBrush="#bd0f0f" BorderThickness="2"/>
        </WrapPanel>
    </Grid>
</Window>
