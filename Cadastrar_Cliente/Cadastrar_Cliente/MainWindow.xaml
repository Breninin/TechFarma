<Window x:Class="Cadastrar_Cliente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cadastrar_Cliente"
        mc:Ignorable="d"
        Title="Cadastrar Cliente" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Label Content="Nome Completo" HorizontalAlignment="Left" Margin="38,35,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <Label Content="Data de Nascimento" HorizontalAlignment="Left" Margin="17,276,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <Label Content="Celular" HorizontalAlignment="Left" Margin="578,96,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <Label Content="CPF" HorizontalAlignment="Left" Margin="101,96,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <Label Content="RG" HorizontalAlignment="Left" Margin="353,96,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial" RenderTransformOrigin="1.536,0.968"/>
        <Label Content="Endereço" HorizontalAlignment="Left" Margin="74,161,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <Label Content="Cidade" HorizontalAlignment="Left" Margin="87,221,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <Label Content="UF" HorizontalAlignment="Left" Margin="600,219,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <Label Content="CEP" HorizontalAlignment="Left" Margin="346,219,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <Label Content="Sexo" HorizontalAlignment="Left" Margin="344,274,0,0" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Arial"/>
        <DatePicker HorizontalAlignment="Left" Margin="174,276,0,0" VerticalAlignment="Top" FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="174,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="654,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Margin="174,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="414,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="174,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="600" FontFamily="Arial" RenderTransformOrigin="0.075,-2.213"/>
        <TextBox HorizontalAlignment="Left" Margin="174,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="414,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Arial"/>
        <ComboBox x:Name="cbUF" SelectionChanged="cbUF_SelectionChanged" HorizontalAlignment="Left" Margin="654,217,0,0" VerticalAlignment="Top" Width="120" FontFamily="Arial"/>
        
        
        
        <ComboBox HorizontalAlignment="Left" Margin="414,276,0,0" VerticalAlignment="Top" Width="120" FontFamily="Arial"/>
        <Button Content="CANCELAR" HorizontalAlignment="Left" Margin="174,366,0,0" Width="120" Height="30" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold"/>
        <Button Content="SALVAR" HorizontalAlignment="Left" Margin="550,366,0,0" Width="120" Height="30" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold"/>

    </Grid>
</Window>
