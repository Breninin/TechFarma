<Window x:Class="WpfTechPharma.Janelas.JanCadastrarMedicamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTechPharma.Janelas"
        mc:Ignorable="d"
        Title="Cadastrar Medicamentos" 
        WindowStartupLocation="CenterScreen"
        Height="480" Width="820" 
        MinHeight="480" MinWidth="820"
        FontFamily="Arial"
        FontSize="16">
    <!--Tela Mailon-->
    <Grid RenderTransformOrigin="0.364,0.523" >
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <Label x:Name="nomeLabel" Content="NOME" HorizontalAlignment="Left" Margin="10 15 0 10" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="16" Width="274" Height="25"/>
            <Label x:Name="pesoVolumeLabel" Content="PESO/VOLUME" HorizontalAlignment="Left" Margin="10 15 0 10" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="16" Width="274" Height="25"/>
            <Label x:Name="vencimentoLabel" Content="VENCIMENTO" HorizontalAlignment="Left" Margin="10 15 0 10" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="16" Width="274" Height="25"/>
            <Label x:Name="estoqueLabel" Content="ESTOQUE" HorizontalAlignment="Left" Margin="10 15 0 10" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="16" Width="274" Height="25"/>
            <Label x:Name="fornecedorLabel" Content="FORNECEDOR" HorizontalAlignment="Left" Margin="10 15 0 10" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="16" Width="274" Height="25"/>
            <Label x:Name="codigoDeBarraLabel" Content="CÓDIGO DE BARRA" HorizontalAlignment="Left" Margin="10 15 0 10" VerticalAlignment="Top" FontFamily="Arial" FontWeight="Bold" FontSize="16" Width="274" Height="25"/>
            <Button x:Name="voltarBt" Content="VOLTAR" HorizontalAlignment="Left" Margin="10 115 10 10" FontFamily="Arial" Height="25" Width="114" Foreground="Black" Background="#FFFFF0F0" BorderBrush="#bd0f0f" BorderThickness="2" FontSize="16"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBox x:Name="nomeTbx" HorizontalAlignment="Left" Margin="214,15,0,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="576" Height="25" FontFamily="Arial" FontSize="16" CharacterCasing="Upper" VerticalContentAlignment="Bottom"/>
            <TextBox x:Name="pesoVolumeTbx" HorizontalAlignment="Left" Margin="214,15,0,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" Height="25" FontFamily="Arial" FontSize="16" CharacterCasing="Upper" VerticalContentAlignment="Bottom"/>
            <DatePicker x:Name="vencimentoDp" HorizontalAlignment="Left" Margin="214,15,0,10" VerticalAlignment="Top" Width="274" Height="25" FontFamily="Arial" FontSize="16" VerticalContentAlignment="Bottom"/>
            <ComboBox x:Name="fornecedorCb" HorizontalAlignment="Left" Margin="214,15,0,10" VerticalAlignment="Top" Width="274" Height="25" FontFamily="Arial" FontSize="16" VerticalContentAlignment="Bottom"/>
            <ComboBox x:Name="estoqueCb" HorizontalAlignment="Left" Margin="214,15,0,10" VerticalAlignment="Top" Width="274" Height="25" FontFamily="Arial" FontSize="16" VerticalContentAlignment="Bottom"/>
            <TextBox x:Name="codigoDeBarraTbx" HorizontalAlignment="Left" Margin="214,15,0,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" Height="25" FontFamily="Arial" FontSize="16" CharacterCasing="Upper" VerticalContentAlignment="Bottom"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
            <Button x:Name="consultarBt" Content="CONSULTAR" HorizontalAlignment="Left" Margin="568,65,0,65" VerticalAlignment="Top" FontFamily="Arial" Height="25" Width="114" Foreground="Black" Background="#FFFFF0F0" BorderBrush="#bd0f0f" BorderThickness="2" FontSize="16"/>
            <Button x:Name="cancelarBt" Content="CANCELAR" HorizontalAlignment="Left" Margin="568,10,0,65" VerticalAlignment="Top" FontFamily="Arial" Height="25" Width="114" Foreground="Black" Background="#FFFFF0F0" BorderBrush="#bd0f0f" BorderThickness="2" FontSize="16"/>
            <Button x:Name="salvarBt" Content="SALVAR" HorizontalAlignment="Left" Margin="568,10,0,10" VerticalAlignment="Top" FontFamily="Arial" Height="25" Width="114" Foreground="Black" Background="#FFFFF0F0" BorderBrush="#bd0f0f" BorderThickness="2" FontSize="16"/>
            <Button x:Name="excluirBt" Content="EXCLUIR" HorizontalAlignment="Right" Margin="676,115,10,0" VerticalAlignment="Bottom" FontFamily="Arial" Height="25" Width="114" Foreground="Black" Background="#FFFFF0F0" BorderBrush="#bd0f0f" BorderThickness="2" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
